generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum DayOfWeek {
  sunday
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
}

model User {
  id String @id @default(uuid()) @map("_id")

  firstName String
  lastName  String
  birthDate DateTime
  city      String
  country   String

  email    String  @unique
  password String
  Event    Event[]
}

model Event {
  id String @id @default(uuid()) @map("_id")

  description String
  dayOfWeek   DayOfWeek

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
